<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUD</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</head>

<body>
    <div class="container">
        <form action="/put-crud" method="POST">
            <div class="row-12 mb-5">
                <div class="position-absolute top-0 start-50 translate-middle-x">
                    EDIT YOUR INFORMATIONS
                </div>
            </div>
            <div class=" mb-3 row">
                <div class="form-group col-6">
                    <label for="InputFirstName" class="form-label">First Name</label>
                    <input type="text" class="form-control" id="InputFirstName" name="firstName"
                        value="<%= userData.firstName %>">
                </div>
                <div class="form-group col-6">
                    <label for="InputLastName" class="form-label">Last Name</label>
                    <input type="text" class="form-control" id="InputLastName" name="lastName"
                        value="<%= userData.lastName %>">
                </div>
            </div>
            <div class="mb-3">
                <label for="InputAddress" class="form-label">Address</label>
                <input type="text" class="form-control" id="InputAddress" name="address"
                    value="<%= userData.address %>">
            </div>
            <div class="mb-3">
                <label for="InputPhoneNumber" class="form-label">Phone Number</label>
                <input type="text" class="form-control" id="InputPhoneNumber" name="phoneNumber"
                    value="<%= userData.phoneNumber %>">
            </div>
            <div class="row mb-3">
                <div class="form-group col-4">
                    <label for="inputGroupSelectGender">Gender</label>
                    <select class="form-select" id="inputGroupSelectGender" name="gender"
                        value="<%= userData.gender %>">
                        <option value="0">Male</option>
                        <option value="1">Female</option>
                    </select>
                </div>
                <div class="form-group col-4">
                    <label for="inputGroupSelectRoleId">Role</label>
                    <select class="form-select" id="inputGroupSelectRoleId" name="roleId"
                        value="<%= userData.roleId %>">
                        <option value="R1">Admin</option>
                        <option value="R2">Teacher</option>
                        <option value="R3">Student</option>
                    </select>
                </div>
                <div class="form-group col-4">
                    <label for="inputGroupSelectPositionId">Position</label>
                    <select class="form-select" id="inputGroupSelectPositionId" name="positionId">
                        <option value="P1">Studying</option>
                        <option value="P2">Employed</option>
                        <option value="P3">Leader</option>
                    </select>
                </div>
            </div>
            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                <label class="form-check-label" for="exampleCheck1">I AGREE WITH YOUR ToS</label>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
            <div>
                <input name="id" value="<%= userData.id %>" type="text" class="visually-hidden" />
            </div>
        </form>
    </div>

</body>

</html>